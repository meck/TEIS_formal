vunit fft_window_formal (fft_window(behav))
{

default clock is rising_edge(clk);

-- signal f_result : sfixed(1 downto - 2*g_sample_width + 2);

-- f_result <= to_sfixed(sample_in, sf) * sf;
--
assume always c_cof_rom = init_cofs;

initial_reset : assume {{not Reset_n[+]; Reset_n[+]}[+]};

assert always (sample_in_valid -> next[2] (sample_out_valid)) abort not reset_n;

assert always (sample_in_valid -> next[2] (sample_out = prev(sample_in, 2))) abort not reset_n;

}


